<?xml version="1.0" encoding="utf-8"?>
<assembly>
    <id>with-dependencies</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/site/apidocs</directory>
            <outputDirectory>/doc/api</outputDirectory>
            <includes/>
        </fileSet>
        <fileSet>
            <directory>src/main/java</directory>
            <outputDirectory>/example</outputDirectory>
            <includes>
                <include>Example.properties</include>
                <include>data/*</include>
                <include>com/marklogic/client/example/cookbook/*.java</include>
                <include>com/marklogic/client/example/handle/*.java</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/resources/example/README.txt</source>
            <outputDirectory>/example</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/query-options-template.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/Readme.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/NOTICE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/ASL-v2_0.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/CDDL-v1_1.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/EPL-v1_0.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/MIT-X11.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
